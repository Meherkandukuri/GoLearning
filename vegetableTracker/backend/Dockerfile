# Build the Go backend
FROM golang:1.22-alpine AS build
WORKDIR /src
COPY go.mod go.sum ./
RUN go mod download
COPY . .
RUN CGO_ENABLED=0 GOOS=linux GOARCH=amd64 go build -o /app/server ./cmd/api

# Runtime image
FROM alpine:3.18
RUN apk add --no-cache ca-certificates
COPY --from=build /app/server /app/server
WORKDIR /app
EXPOSE 8080
CMD ["/app/server"]
